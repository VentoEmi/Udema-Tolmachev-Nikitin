<body id="register_bg">
	
	<nav id="menu" class="fake_menu"></nav>
	
	<div id="preloader">
		<div data-loader="circle-side"></div>
	</div>
	<!-- End Preload -->
	
	<div id="login">
		<aside>
			<figure>
				<a href="/"><img src="../../udema/img/logo.png" width="149" height="42" alt=""></a>
			</figure>
			<form autocomplete="off" method="post" action="/register">
				<div class="form-group">

					<span class="input">
					<input class="input_field" name="name" type="text">
						<label class="input_label">
						<span class="input__label-content">Your Name</span>
					</label>
					</span>

					<span class="input">
					<input class="input_field" name="last_name" type="text">
